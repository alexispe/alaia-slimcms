{% extends "layout.twig" %}

{% block content %}
  <h1>Liste des utilisateurs</h1>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Titre</th>
        <th>Auteur</th>
        <th>Catégorie</th>
        <th>Créer le</th>
      </tr>
    </thead>
    <tbody>
      {% for post in posts %}
      <tr>
        <td>{{ post.title }}</td>
        <td>{{ post.author }}</td>
        <td>{{ post.categorie }}</td>
        <td>{{ post.createdAt }}</td>
        <td>
          <a href="{{ path_for('postUpdate', { 'id' : post.id }) }}" class="btn btn-primary btn-sm"><span class="ion-edit"> Editer</span></a>
          <a href="#" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#post-delete-{{ post.id }}"><span class="ion-trash-b"> Supprimer</span></a>
          <div class="modal fade" id="post-delete-{{ post.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Confirmez la suppression</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuer</button>
                  <a href="{{ path_for('postDelete', { 'id' : post.id }) }}" class="btn btn-danger">Supprimer définitivement</a>
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
