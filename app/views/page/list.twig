{% extends "layout.backend.twig" %}

{% block content %}
  <h1>Liste des pages</h1>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Page</th>
        <th>Lien</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for page in pages %}
      <tr>
        <td>{{ page.title }}</td>
        <td>{{ page.link }}</td>
        <td>
          <a href="{{ path_for('pageUpdate', { 'id' : page.id }) }}" class="btn btn-primary btn-sm"><span class="ion-edit"> Editer</span></a>
          <a href="#" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#page-delete-{{ page.id }}"><span class="ion-trash-b"> Supprimer</span></a>
          <div class="modal fade" id="page-delete-{{ page.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Confirmez la suppression</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuer</button>
                  <a href="{{ path_for('pageDelete', { 'id' : page.id }) }}" class="btn btn-danger">Supprimer d√©finitivement</a>
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
