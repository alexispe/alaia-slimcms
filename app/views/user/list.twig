{% extends "layout.twig" %}

{% block content %}
  <h1>Liste des utilisateurs</h1>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Nom Prénom</th>
        <th>Email</th>
        <th>Rôle</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for user in users %}
      <tr>
        <td>{{ user.lastname }} {{ user.firstname }}</td>
        <td>{{ user.email }}</td>
        <td>{{ user.role }}</td>
        <td>
          <a href="{{ path_for('userUpdate', { 'id' : user.id }) }}" class="btn btn-primary btn-sm"><span class="ion-edit"> Editer</span></a>
          <a href="#" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#user-delete-{{ user.id }}"><span class="ion-trash-b"> Supprimer</span></a>
          <div class="modal fade" id="user-delete-{{ user.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Confirmez la suppression</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuer</button>
                  <a href="{{ path_for('userDelete', { 'id' : user.id }) }}" class="btn btn-danger">Supprimer définitivement</a>
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
